@page "/{author}"
@model Chirp.Razor.Pages.UserTimelineModel
@inject Chirp.Infrastructure.Data.ChirpDbContext DbContext
@{
    var email = User.Identity?.Name ?? "";
    var author = DbContext.Authors.FirstOrDefault(a => a.Email == email);
}
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
    var routeName = HttpContext.GetRouteValue("author");
}

<div>
    <h2> @routeName's Timeline </h2>
    @if (User.Identity.IsAuthenticated) {
        <div class="cheepbox">
        <h3>What's on your mind @(author?.Name ?? User.Identity?.Name ?? "")?</h3>
        <form method="post">
            <input style="float: left" type="text" asp-for="Text" id="UserCheepText" maxlength="160">
            <input type="submit" value="Share">
            <span asp-validation-for="Text" class="text-danger"></span>
        </form>
        <div id="charCounter" style="font-size: 0.9em; color: gray;">
    0 / 160
</div>
    </div>
    }

    @if (Model.Cheeps.Any())
    {
        <ul id="messagelist" class="cheeps">
            @foreach (var cheep in Model.Cheeps)
            {
                <li data-author="@cheep.AuthorName">
                    <p>
                        <strong>
                            <a href="/@cheep.AuthorName">@cheep.AuthorName</a>
                        </strong>
                        @cheep.Text     
                        <small>&mdash; @cheep.TimeStamp.ToString("g")</small>
                    </p>
                </li>
            }
        </ul>
        <div class="pagination">
            @if (Model.CurrentPage > 1)
            {
                <a href="/@routeName?page=@(Model.CurrentPage - 1)">previous</a>
            }
            
            <span>page @Model.CurrentPage</span>

            @if (Model.Cheeps.Count == 32)
            {
                <a href="/@routeName?page=@(Model.CurrentPage + 1)">next</a>
            }
        </div>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const input = document.querySelector("#UserCheepText") || document.querySelector("#CheepText");
            const counter = document.querySelector("#charCounter");

            if (!input || !counter) return;

            const max = 160;

            input.addEventListener("input", () => {
                const length = input.value.length;
                counter.textContent = `${length} / ${max}`;

                if (length >= max) {
                    counter.style.color = "red";
                    counter.textContent = `${length} / ${max} (max reached)`;
                } else {
                    counter.style.color = "gray";
                }
            });
        });
    </script>
}
