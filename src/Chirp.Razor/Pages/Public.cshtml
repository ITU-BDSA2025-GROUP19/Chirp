@page "/"
@model Chirp.Razor.Pages.PublicModel
@inject Chirp.Infrastructure.Data.ChirpDbContext DbContext
@{
    var email = User.Identity?.Name;
    var currentAuthor = DbContext.Authors.FirstOrDefault(a => a.Email == email);
}
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
}

<div>
    <h2> Public Timeline </h2>

    @if (User.Identity.IsAuthenticated) {
        <div class="cheepbox">
            <h3>What's on your mind @(currentAuthor?.Name ?? User.Identity.Name)?</h3>
            <form method="post">
                <input style="float: left" type="text" asp-for="Text" id="CheepText" maxlength="160">
                <input type="submit" value="Share">
                
                <span asp-validation-for="Text" class="text-danger"></span>
            </form>
            <div id="charCounter" style="font-size: 0.9em; color: gray;">
    0 / 160
</div>
        </div>
    }

    @if (Model.Cheeps.Any())
    {
        <ul id="messagelist" class="cheeps">
            @foreach (var cheep in Model.Cheeps)
            {
                var cheepAuthor = DbContext.Authors.FirstOrDefault(a => a.Name == cheep.AuthorName);

                bool isSelf = currentAuthor != null && cheepAuthor?.AuthorId == currentAuthor.AuthorId;
                bool isFollowing = false;

                if (currentAuthor != null && cheepAuthor != null && !isSelf)
                {
                    isFollowing = DbContext.Follows.Any(f =>
                        f.FollowerId == currentAuthor.AuthorId &&
                        f.FolloweeId == cheepAuthor.AuthorId);
                }

                <li data-author="@cheepAuthor.Name">
                    <p>
                        <strong>
                            <a href="/@cheep.AuthorName">@cheep.AuthorName</a>
                        </strong>
                        @cheep.Text
                        <small>&mdash; @cheep.TimeStamp.ToString("g")</small>

                        @* --- Follow / Unfollow Buttons --- *@
                        @if (User.Identity.IsAuthenticated && !isSelf && cheepAuthor != null)
                        {
                            if (isFollowing)
                            {
                                <form method="post" action="/Unfollow" style="display:inline;">
                                    <input type="hidden" name="followeeId" value="@cheepAuthor.AuthorId" />
                                    <button type="submit" class="btn btn-link">unfollow</button>
                                </form>
                            }
                            else
                            {
                                <form method="post" action="/Follow" style="display:inline;">
                                    <input type="hidden" name="followeeId" value="@cheepAuthor.AuthorId" />
                                    <button type="submit" class="btn btn-link">follow</button>
                                </form>
                            }
                        }
                    </p>
                </li>
            }
        </ul>
        <div class="pagination">
            @if (Model.CurrentPage > 1)
            {
                <a href="?page=@(Model.CurrentPage - 1)">previous</a>
            }
            
            <span>page @Model.CurrentPage</span>

            @if (Model.Cheeps.Count == 32)
            {
                <a href="?page=@(Model.CurrentPage + 1)">next</a>
            }
        </div>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const input = document.querySelector("#UserCheepText") || document.querySelector("#CheepText");
            const counter = document.querySelector("#charCounter");

            if (!input || !counter) return;

            const max = 160;

            input.addEventListener("input", () => {
                const length = input.value.length;
                counter.textContent = `${length} / ${max}`;

                if (length >= max) {
                    counter.style.color = "red";
                    counter.textContent = `${length} / ${max} (max reached)`;
                } else {
                    counter.style.color = "gray";
                }
            });
        });
    </script>
}

