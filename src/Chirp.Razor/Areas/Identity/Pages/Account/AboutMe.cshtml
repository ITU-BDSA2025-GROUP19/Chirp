@page
@model Chirp.Razor.Areas.Identity.Pages.Account.AboutMeModel

<h1>About me</h1>

<section>
    <h2>Your personal information</h2>
    <table>
        <tr><th>Username</th><td>@Model.Author.AuthorName</td></tr>
        <tr><th>Mail</th><td>@Model.Author.Email</td></tr>
    </table>
</section>

<section>
    <h2>Users you follow</h2>

    @if (Model.Following.Any())
    {
        <ul>
            @foreach (var follow in Model.Following)
            {
                <li>@follow.FolloweeName</li>
            }
        </ul>
    }
    else
    {
        <p>You are not following anyone.</p>
    }
</section>

<section>
    <h2>Your cheeps</h2>
    
    @if (Model.Cheeps.Any())
    {
        @foreach (var cheep in Model.Cheeps)
        {
            <article class="cheep">
                <header>@cheep.AuthorName · @cheep.TimeStamp</header>
                <p>@cheep.Text</p>
            </article>
        }
    }
    else
    {
        <p>You haven’t cheeped yet.</p>
    }
</section>

@* Delete Account Section *@
<section>
    <h2>Forget Me</h2>
    <p><strong>Important Information :</strong> This action will permanently delete your account and remove your data.</p>
    <form method="post" asp-page-handler="ForgetMe">
        <button type="submit" class="btn btn-danger"
                onclick="return confirm('Are you sure you want to delete your account? This action cannot be undone.');">
            Forget me!
        </button>
    </form>
</section>